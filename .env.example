# Sniff Environment Variables
# Copy this file to .env and fill in your credentials

# PostgreSQL database URL (required)
DATABASE_URL=postgresql://user:password@localhost:5432/sniff

# Linear credentials
# Use OAuth (run `sniff auth linear`)
LINEAR_CLIENT_ID=
LINEAR_CLIENT_SECRET=

# Linear webhook secret (optional, for webhook verification)
LINEAR_WEBHOOK_SECRET=

# Anthropic API key
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-xxx

# Server port (optional, defaults to 3000)
SNIFF_PORT=3000

# Server URL (required for cloud deployment OAuth)
# SNIFF_SERVER_URL=https://api.sniff.to

# API key for remote deploy (optional, for securing the deploy endpoint)
SNIFF_API_KEY=
