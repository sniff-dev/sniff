{
  "name": "@sniff-dev/core",
  "version": "1.2.0",
  "license": "MIT",
  "author": "Sniff <hello@sniff.to>",
  "description": "Core runtime for Sniff agent framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/sniff-dev/sniff.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/sniff-dev/sniff/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sniff-server": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./platforms": {
      "types": "./dist/platforms/index.d.ts",
      "import": "./dist/platforms/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsx watch --clear-screen=false src/bin.ts",
    "dev:build": "tsc --watch"
  },
  "dependencies": {
    "@sniff-dev/config": "workspace:*",
    "@usepolvo/core": "^1.2.0",
    "@usepolvo/linear": "^1.2.0",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@anolilab/semantic-release-pnpm": "^3.1.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "semantic-release": "^25.0.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
